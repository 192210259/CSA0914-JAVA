public class replacechar {
    public static void main(String[] args) {
        String str = "sun";
        char charToReplace ='s';
        char replacementChar = 'h';
        String modifiedStr = str.replace(String.valueOf(charToReplace), String.valueOf(replacementChar));
        System.out.println("Modified string: " + modifiedStr);
    
}
}
